@model RentEasy.Models.ItemListingEditViewModel

<h2>Edit Item</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ItemId" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="AvailableFrom"></label>
        <input asp-for="AvailableFrom" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="AvailableTo"></label>
        <input asp-for="AvailableTo" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Existing Images</label>
        <div>
            @if (Model.ExistingImages != null && Model.ExistingImages.Count > 0)
            {
                @foreach (var img in Model.ExistingImages)
                {
                    <img src="@img" alt="Item Image" class="m-2" style="max-width: 100px; max-height: 100px; object-fit: contain;" />
                }
            }
            else
            {
                <p>No images uploaded.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label>Upload New Images (optional)</label>
        <input type="file" name="images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
