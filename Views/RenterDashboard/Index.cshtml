@model IEnumerable<RentEasy.Models.Booking>

@{
    ViewData["Title"] = "RenterDashboard";
}
<h2>Your Dashboard</h2>
<a class="btn btn-success mb-3" href="@Url.Action("Create", "Renter")">Add New Items</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rented Item</th>
            <th>Start</th>
            <th>End</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <!-- Null-safe check for Itemlisting -->
                <td>@(booking.Itemlisting?.Title ?? "Item not found")</td>
                <td>@booking.StartDate.ToString("MMM dd, yyyy HH:mm")</td>
                <td>@booking.EndDate.ToString("MMM dd, yyyy HH:mm")</td>
                <td>@($"${booking.TotalAmount:0.00} CAD")</td>
            </tr>
        }
    </tbody>
</table>
